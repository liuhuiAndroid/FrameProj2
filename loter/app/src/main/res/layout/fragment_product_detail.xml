<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        layout="@layout/include_actionbar_normal"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:button="@null"
            android:id="@+id/tv_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商品"
            android:textColor="@drawable/rb_color_selector"
            android:gravity="center"
            android:checked="true"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/tv_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/rb_color_selector"
            android:text="详情"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/tv_evaluate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评价"
            android:textColor="@drawable/rb_color_selector"/>

    </RadioGroup>

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:drawSelectorOnTop="false"
        android:scrollbarStyle="outsideOverlay"
        android:fastScrollEnabled="true"
        android:overScrollMode="never"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bottom_tv_custom_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:background="#ededed"
            android:text="客服"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/md_grey_500"
            />

        <TextView
            android:id="@+id/bottom_tv_seller"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:background="#ededed"
            android:layout_weight="1"
            android:gravity="center"
            android:text="店铺"/>

        <TextView
            android:id="@+id/bottom_tv_add_shopping_car"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:background="#f6ac02"
            android:text="加入购物车"
            android:gravity="center"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/bottom_buy_immediately"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>
</LinearLayout>