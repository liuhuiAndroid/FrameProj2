<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.loter.ui.activity.MainActivity">


    <com.android.loter.ui.widget.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:background="@color/colorPrimary">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableBottom="@drawable/bg_toast"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/rb_business"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableBottom="@drawable/bg_toast"
            android:text="逛商圈"/>

        <RadioButton
            android:id="@+id/rb_live"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableBottom="@drawable/bg_toast"
            android:text="Go直播"/>

        <RadioButton
            android:id="@+id/rb_profit"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableBottom="@drawable/bg_toast"
            android:text="分享赚"/>

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableBottom="@drawable/bg_toast"
            android:text="我"/>

    </RadioGroup>

</LinearLayout>
