<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_actionbar_normal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:paddingTop="32dp">

            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/til_phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:errorEnabled="true">-->

            <EditText
                android:id="@+id/et_username"
                style="@style/input_edit"
                />
            <!--</android.support.design.widget.TextInputLayout>-->

            <RelativeLayout
                android:id="@+id/rl_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_username"
                android:layout_marginTop="18dp">

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:errorEnabled="true">-->

                <EditText
                    android:id="@+id/et_password"
                    style="@style/input_passwd"
                    />
                <!--</android.support.design.widget.TextInputLayout>-->

                <ImageView
                    android:id="@+id/iv_switch"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_launcher"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_huge_high"
                android:layout_below="@+id/rl_password"
                android:layout_marginTop="32dp"
                android:background="@color/colorPrimary"
                android:text="@string/loginactivity_title"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="100dp"
                android:layout_height="@dimen/margin_huge_high"
                android:layout_below="@+id/btn_login"
                android:layout_marginTop="32dp"
                android:background="@color/colorPrimary"
                android:text="@string/loginactivity_register"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_forget_password"
                android:layout_width="100dp"
                android:layout_height="@dimen/margin_huge_high"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btn_login"
                android:layout_marginTop="32dp"
                android:background="@color/colorPrimary"
                android:text="@string/loginactivity_forget_password"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>


            <RelativeLayout
                android:id="@+id/rl_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_register"
                android:layout_marginTop="60dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/tv_current_repeat_count"
                    android:background="@color/line_grey"/>

                <TextView
                    android:id="@+id/tv_current_repeat_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="OR"
                    android:textColor="#cccccc"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_current_repeat_count"
                    android:background="@color/line_grey"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_third_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_or"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_wx"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_wx_friend"/>

                <ImageView
                    android:id="@+id/img_qq"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    app:srcCompat="@drawable/ic_qq_friend"/>

                <ImageView
                    android:id="@+id/img_sina"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    app:srcCompat="@drawable/ic_sina"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>