<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/imageView_seller"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/imageView_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp">

            <TextView
                android:id="@+id/tv_seller_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试SB文艺"
                />

            <TextView
                android:id="@+id/tv_seller_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试量 1922"
                android:layout_marginTop="3dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="关注"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/btn_privately"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="私信"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_comprehensive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="按更新"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_buzz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="按销量"/>

        <TextView
            android:id="@+id/tv_sales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="按价格"/>

    </LinearLayout>

</LinearLayout>